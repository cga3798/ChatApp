<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group1.tcss450.uw.edu.a450groupone.ChatOptionsFragment">

    <LinearLayout
        android:id="@+id/chatOptionLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />

        <Button
            android:id="@+id/chatOptionLeaveGroup"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leave_group"
            android:textAlignment="viewStart"
            android:textColor="@color/chat_option_text_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/chatOptionViewMembers"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_members"
            android:textAlignment="viewStart"
            android:textColor="@color/chat_option_text_color"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
